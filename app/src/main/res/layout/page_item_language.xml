<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_pager_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="@string/title_language"
        android:textSize="32sp"/>

    <RadioGroup
        android:id="@+id/radiogroup_pager_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:checkedButton="@id/radiobutton_eng_language">

        <RadioButton
            android:id="@+id/radiobutton_eng_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/holo_blue"/>
        <RadioButton
            android:id="@+id/radiobutton_cn_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radiogroup_pager_language"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:background="#00FFFFFF"
        android:text="next"
        android:textSize="24sp"/>

</RelativeLayout>